@model IEnumerable<DatabaseLayer.DoctorAppointTable>

@{
    ViewBag.Title = "PendingAppoint";
}

<h2>PendingAppoint</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorTable.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorTimeSlotTable.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientTable.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactionNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Status</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DoctorTable.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DoctorTimeSlotTable.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PatientTable.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointDate)

    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TransactionNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>



    <td>
        @{ 
            if(item.IsChecked ==false && item.IsFeeSubmit == false)
            {
                <h2>Pending</h2>
            }
        }
    </td>
</tr>
}

</table>

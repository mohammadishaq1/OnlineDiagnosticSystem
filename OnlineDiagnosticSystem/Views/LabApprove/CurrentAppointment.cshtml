@model IEnumerable<DatabaseLayer.LabAppointTable>

@{
    ViewBag.Title = "Current Appoint";
}

<h2>Current Appointments</h2>


<table class="table">
    <tr>
        <th>
            lab doctor name
        </th>
        <th>
            Time slot
        </th>
        <th>
            Patient Name
        </th>
        <th>
           Appointment date
        </th>
        <th>
           Transaction No.
        </th>
        <th>
            Reason
        </th>
        <th>Payment</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LabTable.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LabTimeSlotTable.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientTable.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointDate)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>



            <td>

                <h2 style="color:forestgreen">Paid</h2>

            </td>
            <td>
                @Html.ActionLink("Process", "ProcessAppointment", new { id = item.LabAppointID }, new { @class = "genric-btn primary" })

            </td>
        </tr>
    }

</table>


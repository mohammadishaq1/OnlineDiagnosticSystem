@model IEnumerable<OnlineDiagnosticSystem.Models.PatientAppointmentMV>

@{
    ViewBag.Title = "Report";
}
 
<h2>Enter report: @ViewBag.Message</h2>

<h2>Enter report: @ViewBag.TestName</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="submit" class="genric-btn success form-control col-md-3" style="float:right" value="Submit Report" />
        <table class="table">
            <tr>
                <th style="display:none;">
                    LabAppointID
                </th>
                <th style="display:none;">
                    LabTestDetailID
                </th>
                <th>
                    Report detail
                </th>
                <th>
                    MinValue
                </th>
                <th>
                    MaxValue
                </th>
                <th>
                    PatientValue
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="display:none;">
                        @Html.HiddenFor(modelItem => item.LabAppointID)
                        @Html.DisplayFor(modelItem => item.LabAppointID)
                    </td>
                    <td style="display:none;">
                        @Html.HiddenFor(modelItem => item.LabTestDetailID)
                        @Html.DisplayFor(modelItem => item.LabTestDetailID)
                    </td>

                    <td>
                        @Html.HiddenFor(modelItem => item.DetailName)
                        @Html.DisplayFor(modelItem => item.DetailName)
                    </td>
                    <td>
                        @Html.HiddenFor(modelItem => item.MinValue)
                        @Html.DisplayFor(modelItem => item.MinValue)
                    </td>
                    <td>
                        @Html.HiddenFor(modelItem => item.MaxValue)
                        @Html.DisplayFor(modelItem => item.MaxValue)
                    </td>

                    <td>
                       
                        @Html.EditorFor(modelItem => item.PatientValue)

                    </td>
                </tr>
            }

        </table>

    </div>
}

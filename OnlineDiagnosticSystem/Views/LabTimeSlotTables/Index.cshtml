@model IEnumerable<DatabaseLayer.LabTimeSlotTable>

@{
    ViewBag.Title = "Lab";
}



<div class="card-header py-3">
    @Html.ActionLink("New Time Slot", "Create", "LabTimeSlotTables", new { @class = "genric-btn success" })
    <input type="text" id="txtsearch" name="txtsearch" class="form-control col-md-2" style="float:right" placeholder="Search" />
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        Time slot Title
                    </th>
                    <th>
                        From Time
                    </th>
                    <th>
                        To Time
                    </th>

                    <th>
                        Active
                    </th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="searchvalue">
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToTime)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.LabTimeSlotID }, new { @class = "genric-btn primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.LabTimeSlotID }, new { @class = "genric-btn danger" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#txtsearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>